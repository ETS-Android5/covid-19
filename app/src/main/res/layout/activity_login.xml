<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#fff"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:id="@+id/img_login_logo"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:background="@drawable/logo"
        />

    <TextView
        android:id="@+id/tv_login_title"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textSize="24dp"
        android:fontFamily="@font/poppins_bold"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.25"
        android:lineSpacingExtra="2dp"
        android:text="COVID-19 TRACKER"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/tv_login_sub"
        android:layout_marginHorizontal="16dp"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:text="Stay Safe"
        android:textColor="@color/colorPurple"
        android:layout_width="wrap_content"/>

    <ProgressBar
        android:id="@+id/progress_circular_login"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_bottom_margin"
        android:text="@string/google_title_text"
        android:theme="@style/ThemeOverlay.MyTitleText" />

    <TextView
        android:id="@+id/status"
        style="@style/ThemeOverlay.MyTextDetail"
        android:text="@string/signed_out" />

    <TextView
        android:id="@+id/detail"
        style="@style/ThemeOverlay.MyTextDetail"
        tools:text="Firebase User ID: 123456789abc" />

    <RelativeLayout
        android:id="@+id/ll_login_getStarted"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:background="#fff"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">



        <Button
            android:id="@+id/signInButton"
            android:background="@drawable/button_rounded_login"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:stateListAnimator="@null"
            android:text="Login With Google"
            android:drawableStart="@drawable/ic_google_logo"
            android:drawableLeft="@drawable/ic_google_logo"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    </RelativeLayout>


</LinearLayout>